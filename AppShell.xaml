<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CascadeProtoypeA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CascadeProtoypeA"
    xmlns:views="clr-namespace:CascadeProtoypeA.Views"
    BackgroundColor="Gray"
    Title="CascadeProtoypeA">

    <TabBar>
        <Tab Title="LOGO"
             Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:LOGO}"/>
        </Tab>
        <Tab Title="Company Handbook"
             Icon="baggage.png">
            <ShellContent ContentTemplate="{DataTemplate views:ExpanderDemo1}"/>
        </Tab>
        <Tab Title="Company Directory"
             Icon="baggage.png">
            <ShellContent ContentTemplate="{DataTemplate views:DirectoryDemo1}"/>
        </Tab>
        <Tab Title="Notifications"
             Icon="bell.png">
            <ShellContent ContentTemplate="{DataTemplate views:DirectoryDemo2}"/>
        </Tab>
        <Tab Title="My Details"
             Icon="person.png">
            <ShellContent ContentTemplate="{DataTemplate views:Contacts}"/>
        </Tab>
    </TabBar>

</Shell>
